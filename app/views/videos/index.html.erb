<div id="videos" class="transitions-enabled">
  <% @videos.each do |video| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(video.image.url(:medium)), video %>
      <div class="panel-body">
        <p><em><%= video.description %></em></p>
        <p>Uploaded by <em><%= video.user.fname if video.user %></em></p>
        <% if video.user == current_user %>
          <div class="actions">
           <%= link_to edit_video_path(video) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Edit
            <% end %>
            <%= link_to video, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="center">
  <%= will_paginate @videos, renderer: BootstrapPagination::Rails %>
</div>